<Window x:Class="LazyCat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="猥琐青年的存图神器" WindowStartupLocation="CenterScreen" Topmost="False" MouseDoubleClick="Window_MouseDoubleClick" Width="600" Height="450" xmlns:my="clr-namespace:LazyCat">
    <Grid OpacityMask="Black">
        <my:SmartImage x:Name="image"/>
    </Grid>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF414141" Offset="0" />
            <GradientStop Color="#FF3E3E3E" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
</Window>
